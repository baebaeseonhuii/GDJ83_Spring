<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- FQDN 풀패키지명 xml에서 객체만들고 주입하는 방법(id가 참조변수 역할을 함) 객체 만들기 -->
	<!-- 클래스명 변수명 = new 생성자 -->
	<bean class="com.seonhui.app.robot.LeftArm" id="leftArm"></bean>
	<bean class="com.seonhui.app.robot.RightArm" id="rightArm"></bean>
	<bean class="com.seonhui.app.robot.Wheel" id="wheel">
		<!-- 인덱스 번호로 매개변수 구분 <constructor-arg index="0" value="50"></constructor-arg> 
			<constructor-arg index="1" value="LG"></constructor-arg> <constructor-arg 
			index="2" value="2"></constructor-arg> -->
		<!-- 데이터 타입으로 매개변수 구분 <constructor-arg type="int" value></constructor-arg> -->
		<!-- 매개변수 이름으로 구분 -->
		<constructor-arg name="size" value="50"></constructor-arg>
		<constructor-arg name="brand" value="LG"></constructor-arg>
		<constructor-arg name="count" value="2"></constructor-arg>
	</bean>
	<bean class="com.seonhui.app.robot.Robot" id="robot">
		<!-- name에 setter의 이름, 주입시키기 -->
		<!-- value: primitive type의 값과 String 값 -->
		<property name="age" value="20"></property>
		<property name="company" value="DooSan"></property>
		<property name="leftArm" ref="leftArm"></property>
		<property name="rightArm" ref="rightArm"></property>

	</bean>

</beans>
